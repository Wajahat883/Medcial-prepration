# Medical Exam Prep - Environment Configuration Example
# Copy this file to .env and update with your actual values

# ============================================
# MongoDB Configuration
# ============================================
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password
MONGO_INITDB_DATABASE=medical-exam-prep
MONGODB_URI=mongodb://admin:password@mongodb:27017/medical-exam-prep?authSource=admin

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=redis-password
REDIS_URL=redis://:redis-password@redis:6379

# ============================================
# JWT & Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_ALGORITHM=HS256

# ============================================
# Node.js & Server Configuration
# ============================================
NODE_ENV=production
PORT=5000
API_BASE_URL=http://server:5000/api
CORS_ORIGIN=http://localhost:3000,http://localhost,http://client:3000

# ============================================
# Next.js & Client Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost/api
NEXT_PUBLIC_JWT_STORAGE_KEY=auth_token
NEXT_PUBLIC_APP_NAME=Medical Exam Prep

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@medical-exam-prep.com

# ============================================
# Third-party Services (Optional)
# ============================================
OPENAI_API_KEY=sk-your-openai-key-here
STRIPE_SECRET_KEY=sk_live_your-stripe-key-here
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key-here

# ============================================
# Logging & Monitoring (Optional)
# ============================================
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key

# ============================================
# File Storage (Optional)
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=medical-exam-prep-bucket

# ============================================
# Feature Flags (Phase 4)
# ============================================
ENABLE_PIRACY_PROTECTION=true
ENABLE_MONETIZATION=true
ENABLE_WELLNESS=true
ENABLE_MULTI_EXAM=true
ENABLE_POST_EXAM_FEEDBACK=true

# ============================================
# Analytics & Tracking (Optional)
# ============================================
GOOGLE_ANALYTICS_ID=G-your-google-analytics-id
MIXPANEL_TOKEN=your-mixpanel-token
AMPLITUDE_API_KEY=your-amplitude-api-key

# ============================================
# Session Configuration
# ============================================
SESSION_SECRET=your-session-secret-key-change-this
SESSION_TIMEOUT=86400
SECURE_COOKIES=true
SAME_SITE=lax

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ENABLED=true

# ============================================
# Database Backup (Optional)
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ============================================
# SSL/TLS Configuration (for production)
# ============================================
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem
# SSL_ENABLED=false

# ============================================
# Docker & Deployment
# ============================================
DOCKER_BUILDKIT=1
DOCKER_COMPOSE_BUILD_CACHE=true
RESTART_POLICY=unless-stopped
